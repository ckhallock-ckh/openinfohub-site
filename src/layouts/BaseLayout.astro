---
const {
  title = "OpenInfoHub",
  description = "Clear, straightforward answers to common questions about home, technology, and everyday problems.",
  canonical = "https://openinfohub.net/",
} = Astro.props;

const siteName = "OpenInfoHub";
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | {siteName}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" href="/favicon.png" type="image/png" />

    <style>
      :root{
        --bg: #f8fafc;        /* soft slate background */
        --surface: #ffffff;   /* card surface */
        --text: #0f172a;      /* slate-900 */
        --muted: #64748b;     /* slate-500 */
        --border: #e2e8f0;    /* slate-200 */
        --link: #0f766e;      /* teal-700 */
        --linkHover: #115e59; /* teal-800 */
        --max: 960px;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body {
        margin: 0;
        background: var(--bg);
        color: var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji";
        line-height: 1.75;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      a { color: var(--link); text-decoration: none; }
      a:hover { color: var(--linkHover); text-decoration: underline; text-underline-offset: 3px; }

      .container {
        max-width: var(--max);
        margin: 0 auto;
        padding: 0 18px;
      }

      header {
        position: sticky;
        top: 0;
        background: rgba(248,250,252,0.85);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--border);
        z-index: 50;
      }

      .header-inner {
        padding: 14px 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .brand {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        font-weight: 850;
        letter-spacing: -0.02em;
        font-size: 18px;
        color: var(--text);
      }

      nav {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      nav a {
        color: #334155;
        font-size: 14px;
        padding: 7px 10px;
        border-radius: 12px;
        background: rgba(255,255,255,0.55);
        border: 1px solid rgba(226,232,240,0.9);
      }

      nav a:hover {
        background: #ffffff;
        text-decoration: none;
      }

      main {
        padding: 28px 0 56px;
      }

      .content-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 22px 22px;
        box-shadow: 0 10px 30px rgba(2,6,23,0.06);
      }

      /* Modern typography for markdown/content */
      :global(h1) {
        font-size: clamp(28px, 4vw, 40px);
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin: 0 0 14px;
      }

      :global(h2) {
        font-size: 22px;
        line-height: 1.25;
        letter-spacing: -0.02em;
        margin: 32px 0 10px;
      }

      :global(h3) {
        font-size: 18px;
        line-height: 1.3;
        margin: 22px 0 8px;
      }

      :global(p) { margin: 12px 0; }

      :global(ul), :global(ol) {
        margin: 12px 0 12px 20px;
        padding: 0;
      }

      :global(li) { margin: 6px 0; }

      :global(blockquote) {
        margin: 18px 0;
        padding: 12px 14px;
        border-left: 3px solid var(--border);
        background: #f1f5f9;
        color: #334155;
        border-radius: 12px;
      }

      :global(code) {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.95em;
        background: #f1f5f9;
        padding: 2px 6px;
        border-radius: 8px;
      }

      :global(pre) {
        background: #0b1220;
        color: #e2e8f0;
        padding: 14px 16px;
        border-radius: 14px;
        overflow-x: auto;
        margin: 16px 0;
      }

      :global(pre code) {
        background: transparent;
        padding: 0;
        color: inherit;
      }

      footer {
        border-top: 1px solid var(--border);
        color: var(--muted);
        font-size: 13px;
      }

      .footer-inner {
        padding: 18px 0;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
        justify-content: space-between;
      }

      .test-banner {
        background: #fef08a; /* yellow-200 */
        border: 1px solid #f59e0b; /* amber-500 */
        color: #111827;
        border-radius: 12px;
        padding: 8px 12px;
        font-weight: 800;
        font-size: 13px;
        display: inline-block;
        width: fit-content;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="container header-inner">
        <!-- TEST: if you see this on the live site, BaseLayout is being used -->
        <div class="test-banner">TEST LAYOUT (remove after confirm)</div>

        <a class="brand" href="/">OpenInfoHub</a>

        <nav aria-label="Primary">
          <a href="/home/">Home</a>
          <a href="/home/pest-control/">Pest Control</a>
          <a href="/about/">About</a>
          <a href="/privacy-policy/">Privacy</a>
        </nav>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="content-card">
          <slot />
        </div>
      </div>
    </main>

    <footer>
      <div class="container footer-inner">
        <div>Â© {year} OpenInfoHub</div>
      </div>
    </footer>
  </body>
</html>

