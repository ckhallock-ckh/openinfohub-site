---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Home Guides & Answers";
const description = "Quick, practical answers for common homeowner questions and everyday problems.";
const canonical = "https://openinfohub.net/home/";
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <h1 style="margin:0 0 8px;">Home</h1>
  <p style="margin:0 0 18px;">
    Browse homeowner topics and quick answers. We add new pages regularly.
  </p>

  <section style="border:1px solid #e5e7eb; border-radius:12px; padding:16px;">
    <h2 style="margin:0 0 6px; font-size:18px;">Popular subcategories</h2>
    <ul style="margin:0; padding-left:18px;">
      <li><a href="/home/pest-control/">Pest Control</a></li>
    </ul>
  </section>
</BaseLayout>
