---
const siteName = "OpenInfoHub";
const description =
  "OpenInfoHub provides clear, straightforward answers to common questions about home, technology, and everyday problems.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.png" type="image/png" />
  </head>
  <body>
    <main style="max-width: 760px; margin: 48px auto; font-family: system-ui; line-height: 1.65; padding: 0 16px;">
      <h1 style="margin:0 0 12px;">OpenInfoHub</h1>
      <p style="margin:0 0 14px;">
        {description}
      </p>
      <p style="margin:0;">
        New content is being added regularly.
      </p>
    </main>
  </body>
</html>
